{
  "name": "sigma-avatars",
  "description": "Sigma Avatars is a tiny JavaScript React library that generates custom, SVG-based, round avatars from any username and color palette.",
  "homepage": "https://avatars.sigmaidentity.com/",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/rohenaz/sigma-avatars"
  },
  "bugs": {
    "url": "https://github.com/rohenaz/sigma-avatars/issues"
  },
  "keywords": [
    "avatar",
    "gravatar",
    "profile picture",
    "user avatar",
    "avatar generator",
    "avatar placeholder"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc --p ./tsconfig.lib.json && NODE_ENV=production bun build src/index.tsx --outdir dist --format esm --sourcemap --external react --external react-dom --external react/jsx-runtime"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.9.2"
  }
}