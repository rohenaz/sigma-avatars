{
  "name": "sigma-avatars",
  "description": "Sigma Avatars is a tiny JavaScript React library that generates custom, SVG-based, round avatars from any username and color palette.",
  "homepage": "https://avatars.sigmaidentity.com/",
  "version": "2.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/rohenaz/sigma-avatars"
  },
  "bugs": {
    "url": "https://github.com/rohenaz/sigma-avatars/issues"
  },
  "keywords": [
    "avatar",
    "gravatar",
    "profile picture",
    "user avatar",
    "avatar generator",
    "avatar placeholder"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun build src/demo/main.tsx --outdir public --format esm --watch & bun run serve",
    "serve": "bun scripts/dev-server.ts",
    "build": "tsc --p ./tsconfig.lib.json && bun build src/lib/index.tsx --outdir dist --format esm --sourcemap --external react --external react-dom --external react/jsx-runtime",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:unsafe": "biome check --write --unsafe ."
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.1.7",
    "globals": "^16.3.0",
    "nice-color-palettes": "^4.0.0",
    "react": "^19.1.1",
    "react-color": "^2.19.3",
    "react-dom": "^19.1.1",
    "styled-components": "^6.1.19",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "ultracite": "5.2.4"
  }
}
